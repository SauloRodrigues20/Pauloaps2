@model IEnumerable<Library.Application.ViewModels.AuthorViewModel>

@{
    ViewData["Title"] = "Autores";
}

<div class="container">
    <h1>Autores</h1>

    <div class="mb-3 text-end">
        <a asp-action="Create" class="btn btn-success">Novo Autor</a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nome Completo</th>
                <th>Data de Nascimento</th>
                <th>Número de Livros</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FullName</td>
                    <td>@(item.BirthDate?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                    <td>
                        <span class="badge bg-primary">@item.BooksCount</span>
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalhes</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Nenhum autor encontrado.
        </div>
    }
</div>
