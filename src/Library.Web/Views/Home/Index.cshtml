@{
    ViewData["Title"] = "Dashboard";
}

<div class="container">
    <div class="text-center mb-5">
        <h1 class="display-4 mb-3">
            <i class="fas fa-book-reader"></i> Dashboard - Biblioteca Digital
        </h1>
        <p class="lead text-muted">Gerencie sua biblioteca de forma simples e eficiente</p>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card stat-card text-white border-0" style="background: linear-gradient(135deg, #0066FF 0%, #00A3FF 100%);">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-book fa-3x"></i>
                    </div>
                    <h5 class="card-title fw-bold">Total de Livros</h5>
                    <p class="display-3 fw-bold mb-3">@ViewBag.TotalBooks</p>
                    <a asp-controller="Books" asp-action="Index" class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-right me-1"></i>Ver Todos
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card stat-card text-white border-0" style="background: linear-gradient(135deg, #28a745 0%, #20c997 100%);">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-user-edit fa-3x"></i>
                    </div>
                    <h5 class="card-title fw-bold">Total de Autores</h5>
                    <p class="display-3 fw-bold mb-3">@ViewBag.TotalAuthors</p>
                    <a asp-controller="Authors" asp-action="Index" class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-right me-1"></i>Ver Todos
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card stat-card text-white border-0" style="background: linear-gradient(135deg, #00A3FF 0%, #5B9FFF 100%);">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-exchange-alt fa-3x"></i>
                    </div>
                    <h5 class="card-title fw-bold">Empréstimos Ativos</h5>
                    <p class="display-3 fw-bold mb-3">@ViewBag.ActiveLoans</p>
                    <a asp-controller="Loans" asp-action="Active" class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-right me-1"></i>Ver Ativos
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card stat-card text-white border-0" style="background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-exclamation-triangle fa-3x"></i>
                    </div>
                    <h5 class="card-title fw-bold">Empréstimos Atrasados</h5>
                    <p class="display-3 fw-bold mb-3">@ViewBag.OverdueLoans</p>
                    <a asp-controller="Loans" asp-action="Overdue" class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-right me-1"></i>Ver Atrasados
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-lg">
                <div class="card-header text-white">
                    <h4 class="mb-0"><i class="fas fa-bolt me-2"></i>Ações Rápidas</h4>
                </div>
                <div class="card-body p-4">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <a asp-controller="Books" asp-action="Create" class="btn btn-primary btn-lg w-100 py-3">
                                <i class="fas fa-plus-circle fa-2x d-block mb-2"></i>
                                <span class="fw-bold">Adicionar Livro</span>
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a asp-controller="Authors" asp-action="Create" class="btn btn-success btn-lg w-100 py-3">
                                <i class="fas fa-user-plus fa-2x d-block mb-2"></i>
                                <span class="fw-bold">Adicionar Autor</span>
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a asp-controller="Loans" asp-action="Create" class="btn btn-info btn-lg w-100 py-3">
                                <i class="fas fa-hand-holding fa-2x d-block mb-2"></i>
                                <span class="fw-bold">Realizar Empréstimo</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .stat-card {
        transition: all 0.3s ease;
        transform: translateY(0);
    }
    
    .stat-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 30px rgba(0, 102, 255, 0.3) !important;
    }
</style>
