@model Library.Application.ViewModels.AuthorViewModel

@{
    ViewData["Title"] = "Excluir Autor";
}

<div class="container">
    <h1>Excluir Autor</h1>

    @if (ViewBag.CanDelete == false)
    {
        <div class="alert alert-danger">
            <strong>Atenção!</strong> Este autor não pode ser excluído porque possui livros associados.
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <strong>Confirme a exclusão:</strong> Tem certeza que deseja excluir este autor?
        </div>
    }

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nome Completo</dt>
                <dd class="col-sm-9">@Model.FullName</dd>

                <dt class="col-sm-3">Data de Nascimento</dt>
                <dd class="col-sm-9">@Model.BirthDate.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">Biografia</dt>
                <dd class="col-sm-9">@(Model.Biography ?? "Nenhuma biografia disponível")</dd>

                <dt class="col-sm-3">Número de Livros</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-primary">@Model.BooksCount</span>
                </dd>
            </dl>
        </div>
    </div>

    @if (ViewBag.CanDelete != false)
    {
        <form asp-action="Delete" method="post" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Confirmar Exclusão</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    }
    else
    {
        <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
        </div>
    }
</div>
