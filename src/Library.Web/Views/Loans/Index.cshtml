@model IEnumerable<Library.Application.ViewModels.LoanViewModel>

@{
    ViewData["Title"] = "Empréstimos";
}

<div class="container">
    <h1>Empréstimos</h1>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">Novo Empréstimo</a>
        <a asp-action="Active" class="btn btn-info">Empréstimos Ativos</a>
        <a asp-action="Overdue" class="btn btn-danger">Empréstimos Atrasados</a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Livro</th>
                <th>Membro</th>
                <th>Email</th>
                <th>Data do Empréstimo</th>
                <th>Data de Devolução</th>
                <th>Data de Retorno</th>
                <th>Status</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="@(item.IsOverdue ? "table-danger" : "")">
                    <td>@item.BookTitle</td>
                    <td>@item.MemberName</td>
                    <td>@item.MemberEmail</td>
                    <td>@item.LoanDate.ToString("dd/MM/yyyy")</td>
                    <td>@item.DueDate.ToString("dd/MM/yyyy")</td>
                    <td>@(item.ReturnDate?.ToString("dd/MM/yyyy") ?? "-")</td>
                    <td>
                        @if (item.Status == "Returned")
                        {
                            <span class="badge bg-success">Devolvido</span>
                        }
                        else if (item.IsOverdue)
                        {
                            <span class="badge bg-danger">Atrasado</span>
                        }
                        else
                        {
                            <span class="badge bg-primary">Ativo</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalhes</a>
                        @if (item.Status != "Returned")
                        {
                            <a asp-action="Return" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Devolver</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Nenhum empréstimo encontrado.
        </div>
    }
</div>
