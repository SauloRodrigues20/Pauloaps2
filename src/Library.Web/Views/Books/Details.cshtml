@model Library.Application.ViewModels.BookViewModel

@{
    ViewData["Title"] = "Detalhes do Livro";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="fas fa-book-open me-2"></i>Detalhes do Livro
        </h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="fas fa-edit me-2"></i>Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Voltar
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-lg">
                <div class="card-header text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>Informações do Livro
                    </h4>
                </div>
                <div class="card-body p-4">
                    <dl class="row mb-0">
                        <dt class="col-sm-3 mb-3">
                            <i class="fas fa-heading text-primary me-2"></i>Título
                        </dt>
                        <dd class="col-sm-9 mb-3">
                            <h5 class="text-primary">@Model.Title</h5>
                        </dd>

                        <dt class="col-sm-3 mb-3">
                            <i class="fas fa-barcode text-primary me-2"></i>ISBN
                        </dt>
                        <dd class="col-sm-9 mb-3">
                            <code class="fs-5">@Model.ISBN</code>
                        </dd>

                        <dt class="col-sm-3 mb-3">
                            <i class="fas fa-calendar-alt text-primary me-2"></i>Ano de Publicação
                        </dt>
                        <dd class="col-sm-9 mb-3">
                            <span class="badge bg-secondary fs-6">@Model.PublicationYear</span>
                        </dd>

                        <dt class="col-sm-3 mb-3">
                            <i class="fas fa-user-edit text-primary me-2"></i>Autor
                        </dt>
                        <dd class="col-sm-9 mb-3">
                            <span class="fs-5">
                                <i class="fas fa-user-circle text-primary me-2"></i>@Model.AuthorName
                            </span>
                        </dd>

                        <dt class="col-sm-3 mb-3">
                            <i class="fas fa-check-circle text-primary me-2"></i>Cópias Disponíveis
                        </dt>
                        <dd class="col-sm-9 mb-3">
                            <span class="badge @(Model.AvailableCopies > 0 ? "bg-success" : "bg-danger") fs-5 px-3 py-2">
                                <i class="fas @(Model.AvailableCopies > 0 ? "fa-check" : "fa-times") me-2"></i>
                                @Model.AvailableCopies @(Model.AvailableCopies == 1 ? "cópia" : "cópias")
                            </span>
                        </dd>

                        <dt class="col-sm-3">
                            <i class="fas fa-books text-primary me-2"></i>Total de Cópias
                        </dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-info fs-5 px-3 py-2">
                                <i class="fas fa-book me-2"></i>
                                @Model.TotalCopies @(Model.TotalCopies == 1 ? "cópia" : "cópias")
                            </span>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg px-5">
            <i class="fas fa-edit me-2"></i>Editar Livro
        </a>
        <a asp-action="Index" class="btn btn-secondary btn-lg px-5">
            <i class="fas fa-list me-2"></i>Ver Todos os Livros
        </a>
    </div>
</div>
