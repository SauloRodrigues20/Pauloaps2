@model Library.Application.ViewModels.AuthorViewModel

@{
    ViewData["Title"] = "Detalhes do Autor";
}

<div class="container">
    <h1>Detalhes do Autor</h1>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nome Completo</dt>
                <dd class="col-sm-9">@Model.FullName</dd>

                <dt class="col-sm-3">Primeiro Nome</dt>
                <dd class="col-sm-9">@Model.FirstName</dd>

                <dt class="col-sm-3">Sobrenome</dt>
                <dd class="col-sm-9">@Model.LastName</dd>

                <dt class="col-sm-3">Data de Nascimento</dt>
                <dd class="col-sm-9">@Model.BirthDate.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">Biografia</dt>
                <dd class="col-sm-9">@(Model.Biography ?? "Nenhuma biografia disponível")</dd>

                <dt class="col-sm-3">Número de Livros</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-primary">@Model.BooksCount</span>
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </div>
</div>
