@model Library.Application.ViewModels.LoanViewModel

@{
    ViewData["Title"] = "Devolver Livro";
}

<div class="container">
    <h1>Devolver Livro</h1>

    <div class="alert alert-info">
        <strong>Confirmação de Devolução:</strong> Tem certeza que deseja registrar a devolução deste livro?
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Livro</dt>
                <dd class="col-sm-9">@Model.BookTitle</dd>

                <dt class="col-sm-3">Membro</dt>
                <dd class="col-sm-9">@Model.MemberName</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.MemberEmail</dd>

                <dt class="col-sm-3">Data do Empréstimo</dt>
                <dd class="col-sm-9">@Model.LoanDate.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">Data de Devolução Prevista</dt>
                <dd class="col-sm-9">@Model.DueDate.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    @if (Model.IsOverdue)
                    {
                        <span class="badge bg-danger">Atrasado</span>
                        <br />
                        <small class="text-danger">Este empréstimo está atrasado!</small>
                    }
                    else
                    {
                        <span class="badge bg-primary">Ativo</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Return" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-warning">Confirmar Devolução</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
